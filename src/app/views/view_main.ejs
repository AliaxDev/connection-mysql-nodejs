<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>App Contacts</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
    integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

</head>

<body>
  <nav class="navbar navbar-dark bg-dark">
    <a href="" class="navbar-brand mx-auto">Contacts</a>
  </nav>

  <div class="row">
    <div class="col-md-6 mt-4 text-center">
      <table class="table table-striped table-bordered table-hover">
        <tr>
          <th>#ID</th>
          <th>Contact</th>
          <th>Phone</th>
        </tr>

        <% for (var i=0; i < contacts.length; i ++) { %>
          <tr onclick="selectRow(this)">
            <td>
              <%= contacts[i].id %>
            </td>
            <td>
              <%= contacts[i].name_contact %>
            </td>
            <td>
              <%= contacts[i].num %>
            </td>
          </tr>
          <% } %>

      </table>
    </div>

    <div class="col-md-6 mt-4">
      <form class="card-body" action="/contact" method="POST">
        <h3 class="card-title">Add Contact</h3>
        <div class="form-group">
          <input id="name" name="name" type="text" class="form-control" placeholder="New Contact">
        </div>
        <div class="form-group">
          <input id="phone" name="phone" type="text" class="form-control" placeholder="New Phone">
        </div>
        <input type="submit" class="btn btn-primary">
      </form>

    </div>
  </div>

  <script>
    //variable---------------------------------------------
    let id
    const name = document.getElementById('name')
    const phone = document.getElementById('phone')

    //take data to update
    function selectRow(elem) {
      //take date from row
      id = elem.cells[0].innerHTML.trim()
      name.value = elem.cells[1].innerHTML.trim()
      phone.value = elem.cells[2].innerHTML.trim()
    }
  </script>

</body>

</html>